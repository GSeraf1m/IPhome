<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.saintjimmy.iphome">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CadastrarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MenuIngredienteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.ListaReceitaActivity" />
        <activity android:name=".Activity.ReceitaActivity" />
        <activity android:name=".Activity.ContaActivity" />
        <activity android:name=".Activity.ReceitasSalvasActivity"></activity>
    </application>

</manifest>